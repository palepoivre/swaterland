                <div class="cover_global" style="height:275px;">
                    <div id="infotitle">
                        <div class="content">
                            <div class="image">
                                <a href='/swaterland/web/app_dev.php/bluray/{{ search.id }}'><img src="" /></a>
                            </div>
                            <div class="name">
                         </a>
                            </div>
                            <div class="name">
                                {{ search.id }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% endfor %}
        </div>
</div>
    {% endblock %}
{% endblock %}