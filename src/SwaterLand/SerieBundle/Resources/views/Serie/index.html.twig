{% extends '::base.html.twig' %}

{% block body -%}
    {% block content %}
        <div class= "contenu" align ="center">
            <h1>Listes des Series</h1>
            <div class ="contenuadmin">
                <table class="records_list">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Image</th>
                        <th>Saison</th>
                        <th>Duree</th>
                        <th>Date</th>
                        <th>Synopsis</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('swater_land_serie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.nom }}</td>
                            <td>{{ entity.image }}</td>
                            <td>{{ entity.saison }}</td>
                            <td>{{ entity.duree }}</td>
                            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.synopsis }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('swater_land_serie_show', { 'id': entity.id }) }}">Voir sa fiche</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('swater_land_serie_update', { 'id': entity.id }) }}">Créée une série</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('swater_land_serie_new') }}">
                            Créée une nouvelle série
                        </a>
                    </li>
                </ul>
            </div>
    {% endblock %}
{% endblock %}

