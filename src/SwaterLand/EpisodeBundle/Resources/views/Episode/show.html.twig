{% block body -%}
    <h1>Episode</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ entity.saison }}</td>
            </tr>
